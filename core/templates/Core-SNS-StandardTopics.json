{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Core-SNS-StandardTopics Template. This creates Standard SNS Topics within the Core Account.",

  "Resources" : {
    "AdministratorsTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "TopicName" : "Administrators",
        "DisplayName" : "Administrators"
      }
    },

    "EventsTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "TopicName" : "Events",
        "DisplayName" : "Events"
      }
    },

    "EventsSMSTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "TopicName" : "EventsSMS",
        "DisplayName" : "Events"
      }
    },

    "AlarmsTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "TopicName" : "Alarms",
        "DisplayName" : "Alarms"
      }
    },

    "AlarmsSMSTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "TopicName" : "AlarmsSMS",
        "DisplayName" : "Alarms"
      }
    },

    "BillsTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "TopicName" : "Bills",
        "DisplayName" : "Bills"
      }
    },

    "BillsSMSTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "TopicName" : "BillsSMS",
        "DisplayName" : "Bills"
      }
    }
  },

  "Outputs" : {
    "AdministratorsTopic" : {
      "Description" : "The Administrators Topic ARN",
      "Value" :  { "Ref" : "AdministratorsTopic" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-AdministratorsTopic" }}
    },

    "EventsTopic" : {
      "Description" : "The Events Topic ARN",
      "Value" :  { "Ref" : "EventsTopic" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-EventsTopic" }}
    },

    "EventsSMSTopic" : {
      "Description" : "The EventsSMS Topic ARN",
      "Value" :  { "Ref" : "EventsSMSTopic" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-EventsSMSTopic" }}
    },

    "AlarmsTopic" : {
      "Description" : "The Alarms Topic ARN",
      "Value" :  { "Ref" : "AlarmsTopic" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-AlarmsTopic" }}
    },

    "AlarmsSMSTopic" : {
      "Description" : "The AlarmsSMS Topic ARN",
      "Value" :  { "Ref" : "AlarmsSMSTopic" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-AlarmsSMSTopic" }}
    },

    "BillsTopic" : {
      "Description" : "The Bills Topic ARN",
      "Value" :  { "Ref" : "BillsTopic" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-BillsTopic" }}
    },

    "BillsSMSTopic" : {
      "Description" : "The BillsSMS Topic ARN",
      "Value" :  { "Ref" : "BillsSMSTopic" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-BillsSMSTopic" }}
    }
  }
}
