{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Identity-IAM-StandardManagedPolicies Template. This creates Standard IAM ManagedPolicies within the Identity Account.",

  "Resources" : {
    "AdministratorAccessWithoutBilling" : {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description" : "Provides full access to AWS services and resources, except for Billing information.",
        "Path" : "/",
        "PolicyDocument" : {
          "Version":"2012-10-17",
          "Statement" : [{
            "Sid" : "Allow Administrator Access",
            "Effect": "Allow",
            "Action": "*",
            "Resource": "*"
          },
          {
            "Sid" : "Deny Billing Access",
            "Effect": "Deny",
            "Action": [
                "aws-portal:*Billing",
                "aws-portal:*Usage",
                "aws-portal:*PaymentMethods",
                "budgets:ViewBudget",
                "budgets:ModifyBudget"
            ],
            "Resource": "*"
          }]
        }
      }
    }
  },

  "Outputs" : {
    "AdministratorAccessWithoutBilling" : {
      "Description" : "The AdministratorAccessWithoutBilling ManagedPolicy ARN",
      "Value" :  { "Ref" : "AdministratorAccessWithoutBilling" },
      "Export" : { "Name" : {"Fn::Sub": "${AWS::StackName}-AdministratorAccessWithoutBilling" }}
    }
  }
}
